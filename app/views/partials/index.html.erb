<h2>Listing partials</h2>

<table class="cms">
  <tr>
    <th>Name</th>
    <th>Thumbnail</th>
    <th>Position</th>
    <th></th>
    <th></th>
  </tr>

<% for partial in @partials %>
  <tr>
    <td><%=h partial.name %></td>
    <td><%=h partial.thumbnail %></td>
    <td><%=h partial.position %></td>
    <td><%= link_to 'Edit', edit_partial_path(partial) %></td>
    <td><%= link_to 'Destroy', partial, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New partial', new_partial_path %>
