<h1>Listing Content Blocks</h1>

<table>
  <tr>
    <th>Controller</th>
    <th>Action</th>
    <th>Position</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
  
<% for content_block in @content_blocks %>
  <tr>
    <td><%=h content_block.controller %></td>
    <td><%=h content_block.action %></td>
    <td><%=h content_block.position %></td>
    <td><%=h content_block.title %></td>
    <td><%=h content_block.text %></td>
    <td><%= link_to 'Show', content_block_path(content_block) %></td>
    <td><%= link_to 'Edit', edit_content_block_path(content_block) %></td>
    <td><%= link_to 'Destroy', content_block_path(content_block), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New content_block', new_content_block_path %>