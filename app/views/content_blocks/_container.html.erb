
<% if (!admin? &&  defined? stripped ) %>
  <%= render :partial=>'/content_blocks/block', :collection=>container.content_blocks.find_all_by_group(group), :locals=>{:stripped=>'true'} %>
<% else %>  
  <div>
    <%= render :partial=>'/content_blocks/block', :collection=>container.content_blocks.find_all_by_group(group) %>
    <%- if admin? -%>
    <p>
      <%= link_to 'Add new content block', new_content_block_url(container.class.name.tableize, container.id, group) %>
    </p>
    <%- end -%>
  </div>
<%- end -%>
