<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for([@comment.post,@comment]) do |f| %>
<p>
  <label for="comment_name">Name:</label><br/>
  <%= f.text_field :name %>
</p>
<p>
  <label for="comment_email">Email:</label><br/>
  <%= f.text_field :email %>
</p>
<p>
  <label for="comment_website">Website:</label><br/>
  <%= f.text_field :website %>
</p>
<p>
  <label for="comment_body">Message:</label><br/>
  <%= f.text_area :body, :size=>'40x10' %>
</p>
<p>
  <%= submit_tag 'Save' %>
</p>
<% end %>

<%= link_to 'cancel and go back', @comment.post.url %>
