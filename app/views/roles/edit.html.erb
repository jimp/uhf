<h2>Edit Role</h2>

<%= error_messages_for :role %>

<% form_for(@role) do |f| %>
  <%= render :partial => 'form', :locals=>{:f=>f} %>
  <p class="toolbar">
    <%= submit_tag 'Save', :disable_with=>'Saving...' %> | <%= link_to 'Delete', @role, :confirm => 'Are you sure?  This could cause some serious problems.', :method => :delete %>
  </p>
<% end %>

<%= link_to 'Back', roles_path %>