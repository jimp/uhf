<%- content_for :toolbar do -%>
<p class="toolbar">
  <%= submit_tag 'Save', :disable_with=>'Saving...' %> | 
  <%= link_to 'Return to List', users_path %> | 
  <%= link_to '&lt;&lt; Previous', edit_user_path(@user.previous_user) %> | 
  <%= link_to 'Next &gt;&gt;', edit_user_path(@user.next_user) %>
</p>
<%- end -%>
<h2><%= @user.login %></h2>

<%= error_messages_for :user %>

<% form_for @user do |f| -%>
<%= render :partial => 'form', :object => f %>
<p>  
  <%= submit_tag 'Save', :disable_with=>'Saving...' %>
</p>
<% end -%>
