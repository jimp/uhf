<table border="0" cellspacing="5" cellpadding="5">
  <tr>
    <td>
      <label for="<%= form.object_name %>_login">Username</label>
    </td>
    <td>
      <%= form.text_field :login %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="<%= form.object_name %>_email">Email</label>
    </td>
    <td>
      <%= form.text_field :email %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="<%= form.object_name %>_name">First Name</label>
    </td>
    <td>
      <%= form.text_field :first %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="<%= form.object_name %>_last_name">Last Name</label>
    </td>
    <td>
      <%= form.text_field :last %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="<%= form.object_name %>_title">Title</label>
    </td>
    <td>
      <%= form.text_field :title %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="<%= form.object_name %>_role_id">Role</label>
    </td>
    <td>
      <%= form.collection_select :role_id, Role.find(:all), :id, :name %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="<%= form.object_name %>_password">Password</label>
    </td>
    <td>
      <%= form.password_field :password %>
    </td>
  </tr>
  <tr>
    <td>
      <label for="<%= form.object_name %>_password_confirmation">Confirm Password</label>
    </td>
    <td>
      <%= form.password_field :password_confirmation %>
    </td>
  </tr>
</table>

